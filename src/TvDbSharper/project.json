{
  "version": "0.3.1-*",

  "authors": ["HristoKolev"],

  "description": "TvDbSharper is fully functional modern REST client for the TheTVDB API v2",

  "buildOptions": {
    "xmlDoc": true,
    "nowarn": ["1591"]
  },

  "packOptions": {
    "projectUrl": "https://github.com/HristoKolev/TvDbSharper",
    "tags": ["thetvdb"],
    "licenseUrl": "https://github.com/HristoKolev/TvDbSharper/blob/master/LICENSE",
    "repository": {
      "type": "git",
      "url": "git://github.com/HristoKolev/TvDbSharper"
    },
    "requireLicenseAcceptance": false
  },

  "frameworks": {
    "netcoreapp1.0": {
      "dependencies": {
        "Microsoft.NETCore.App": "1.0.0",
        "Newtonsoft.Json": "9.0.1"
      }
    },

    "netstandard1.3": {
      "dependencies": {
        "NETStandard.Library": "1.3.0",
        "Newtonsoft.Json": "9.0.1",
        "System.Reflection.TypeExtensions": "4.1.0"
      }
    }
  }
}
